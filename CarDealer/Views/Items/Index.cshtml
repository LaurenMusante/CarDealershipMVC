@using CarDealer.Models;

<h1>Car List:</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
    @foreach(Car car  in Model)
    {
        <li>Model: @car.Model</li>
        <li>Miles: @car.Miles</li>
        <li>Price: @car.Price</li>
    }
</ul>
<a href="/items/new">Add a new car.</a>